<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workout">

    <ImageView
        android:id="@+id/workouttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/workouttitle"/>

    <Button
        android:layout_width="267dp"
        android:layout_height="89dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/workouttitle"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="78dp"
        android:background="@color/black"
        android:text="Easy"
        android:id="@+id/easybtn"
        android:textSize="35sp" />

    <Button
        android:id="@+id/mediumbtn"
        android:layout_width="267dp"
        android:layout_height="89dp"
        android:layout_below="@id/easybtn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="74dp"
        android:background="@color/black"
        android:text="Medium"
        android:textSize="35sp" />
    <Button
        android:id="@+id/hardbtn"
        android:layout_width="267dp"
        android:layout_height="89dp"
        android:layout_below="@id/mediumbtn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="74dp"
        android:background="@color/black"
        android:text="Hard"
        android:textSize="35sp" />


</RelativeLayout>